{% extends 'frontend.html.twig' %}

{% block pagelogin 'active' %}
{% block title 'Entra en tu cuenta o date de alta' %}

{% block maincontent %}
    <div class="col-md-6 login col-centered">

        <div class="row">
            <div class="col-md-12">
                <h2>{{ 'Accede a tu cuenta'|trans }}</h2>
            </div>
        </div>

        <form class="form-horizontal" action="{{ path('usuario_login_check') }}" method="post">
            {% if error %}
                <div class="alert alert-danger" role="alert">ERROR - {{ error.message|trans }}</div>
            {% endif %}
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">{{ 'Email'|trans }}</label>

                <div class="col-sm-10">
                    <input type="email" class="form-control" id="username" name="_username" placeholder="{{ 'Email'|trans }}" value="{{ last_username }}">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">{{ 'Contraseña'|trans }}</label>

                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="_password" placeholder="{{ 'Contraseña'|trans }}">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="_remember_me"> {{ 'No cerrar sesión'|trans }}
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" name="login" class="btn btn-primary">{{ 'Iniciar sesión'|trans }}</button>
                    {{ '¿No tienes una cuenta?'|trans }} <a class="boton" href="{{ path('usuario_registro') }}">{{ 'Regístrate gratis »'|trans }}</a>
                </div>
            </div>
        </form>

    </div>
{% endblock %}

{% block sidebarcontent %}
{% endblock %}