{% extends 'frontend.html.twig' %}

{% block pagemisofertas 'active' %}
{% block title 'Ãšltimas ofertas que has comprado' %}

{% block maincontent %}
    <div class="col-md-9 ofertas-recientes">

        <div class="row">
            <div class="col-md-12">
                <h2><strong>{{ block('title') }}</strong></h2>
            </div>
        </div>

        {% for compra in compras_usuario %}
            {{ include(':oferta:_oferta_simple.html.twig', {
                'oferta' : compra.oferta,
                'comprada' : true,
                'fechaCompra' : compra.fecha
            }) }}
        {% else %}
            <p>No se ha realizado ninguna compra</p>
        {% endfor %}
    </div>
{% endblock %}

