{% extends 'base_extranet.html.twig' %}

{% block title 'Acceso Tiendas' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2 class="text-center">CUPON EXTRANET</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Identificarse</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path('extranet_login_check') }}" method="post">
                            {% if error %}
                                <div class="alert alert-danger" role="alert">ERROR - {{ error.message }}</div>
                            {% endif %}
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Usuario" name="_username" type="text" value="{{ last_username }}" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="ContraseÃ±a" name="_password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="_remember_me" type="checkbox">Recordar
                                    </label>
                                </div>
                                <button type="submit" name="login" class="btn btn-lg btn-success btn-block">Entrar</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}