{% extends 'extranet.html.twig' %}

{% block extranetdashboard 'active' %}
{% block title %}
    Administraci贸n de {{ app.user.nombre }}
{% endblock %}

{% block maincontent %}
    <div class="col-lg-12">
        <h1 class="page-header">Panel de Administraci贸n</h1>
    </div>

    <div class="col-md-12 info-dashboard-tienda">

        <div class="row">
            <div class="col-md-12">
                <h2>Ventas de la Oferta</h2>

                <p><strong>{{ oferta.nombre }}</strong></p>
                <p>{{ oferta.descripcion }}</p>
                <p><span class="label label-default">Fecha de Publicaci贸n: {{ oferta.fechaPublicacion | localizeddate('long', 'medium') }}</span></p>
                <p><span class="label label-default">Fecha de Expiraci贸n: {{ oferta.fechaExpiracion | localizeddate('long', 'medium') }}</span></p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {% if ventas is not empty %}
                    <h3>Datos de las ventas</h3>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>DNI</th>
                            <th>Nombre y apellidos</th>
                            <th>Fecha venta</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for venta in ventas %}
                            <tr>
                                <td>{{ venta.usuario.dni }}</td>
                                <td>{{ venta.usuario.nombre ~ ' ' ~ venta.usuario.apellidos }}</td>
                                <td>{{ venta.fecha | localizeddate('long', 'medium') }}</td>
                            </tr>
                        {% endfor %}
                            <tr class="active">
                                <td></td>
                                <th>TOTAL</th>
                                <td colspan="2">{{ ventas|length * oferta.precio }} &euro; para {{ ventas|length }} ventas</td>
                            </tr>
                        </tbody>
                    </table>
                {% else %}
                    <p>Esta oferta no tiene ninguna venta</p>
                {% endif %}
            </div>
        </div>

        </hr>
    </div>
{% endblock %}