{% set expirada = oferta.fechaExpiracion|date('YmdHis') < 'now'|date('YmdHis') %}

<div class="col-md-9">
    <div class="row">
        <div class="col-md-6 descripcion">
            <h2>
                <a href="{{ path('oferta', {'ciudad': oferta.ciudad.slug, 'slug': oferta.slug }) }}">{{ oferta.nombre }}</a>
            </h2>

            <p>
                {{ oferta.descripcion | mostrar_como_lista }}
            </p>
        </div>

        <div class="col-md-6">
            <div class="img-oferta">
                <a href="#">
                    <img class="img-responsive img-hover" src="{{ asset('uploads/images/' ~ oferta.rutaFoto) }}" alt="">
                </a>

                <p class="precio">{{ oferta.precio }} € <span>{{ descuento(oferta.precio, oferta.descuento) }}</span>
                </p>
            </div>
            {% if not expirada %}
                <div class="boton-compra"><a class="btn btn-primary btn-lg" href="#" role="button">Comprar</a></div>
            {% endif %}
        </div>
    </div>

    <div class="well clearfix datos-oferta">
        {% if not expirada %}
            {% trans with {'%tiempo%': oferta.fechaExpiracion | cuenta_atras } %}
            <div class="pull-left">Expira en %tiempo%
                {% endtrans %}
                <br>
                {% set faltan = oferta.umbral - oferta.compras %}
                {% if faltan > 0 %}
                    {# Si las compras no llegan al umbral mínimo establecido #}
                    Faltan {{ faltan }} compras para activar la oferta
                {% else %}
                    {# Si las compras superan el umbral mínimo establecido #}
                    Oferta activada por superar las {{ oferta.umbral }} compras necesarias
                {% endif %}
            </div>
            <div class="pull-right">Compras: {{ oferta.compras }}</div>
        {% else %}
            {% trans with { '%fecha%': oferta.fechaExpiracion | localizeddate('long', 'none') } %}
            <div class="pull-left">Finalizada el %fecha%</div>
            {% endtrans %}
        {% endif %}
    </div>

    <div class="row">
        <div class="col-md-4">
            <h4>Disfruta de la oferta en</h4>
            <address>
                <strong><a href="#">{{ oferta.tienda.nombre }}</a></strong><br>
                {{ oferta.tienda.direccion }}
            </address>
        </div>
        <div class="col-md-8">
            <h4>Sobre la tienda</h4>

            <p>{{ oferta.tienda.descripcion }}</p>
        </div>
    </div>
</div>